<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    
    <welcome-file-list>
        <welcome-file>/welcome.html</welcome-file> <!-- 默认页面 否则默认为index.jsp -->
    </welcome-file-list>
    
    <servlet>
        <servlet-name>user</servlet-name>
        <servlet-class>com.hunnu.controller.UserServlet</servlet-class>
        <load-on-startup>1</load-on-startup>    <!-- 启动容器时加载该servlet -->
    </servlet>
    <servlet-mapping>
        <servlet-name>user</servlet-name>
        <url-pattern>/user.do</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>home</servlet-name>
        <servlet-class>com.hunnu.controller.HomeServlet</servlet-class>
        <init-param>                              <!-- 参数传入 init方法 -->
            <param-name>a</param-name>
            <param-value>param1</param-value>
        </init-param>
        <init-param>
            <param-name>b</param-name>
            <param-value>param2</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>home</servlet-name>
        <url-pattern>/home.do</url-pattern>
    </servlet-mapping>
</web-app>